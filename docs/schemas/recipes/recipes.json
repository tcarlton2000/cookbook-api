{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Recipes",
    "description": "Schema for list of recipes",
    "type": "object",

    "properties": {
        "items": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "name": {
                        "description": "Name of recipe",
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": [
                    "id",
                    "name"
                ]
            }
        }
    },
    "required": [
        "items"
    ]
}